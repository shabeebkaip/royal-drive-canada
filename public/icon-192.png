<svg width="192" height="192" viewBox="0 0 192 192" xmlns="http://www.w3.org/2000/svg">
  <!-- Background with Royal Drive theme -->
  <rect width="192" height="192" rx="24" fill="url(#bgGradient)"/>
  
  <!-- Speed lines background effect -->
  <g opacity="0.3">
    <rect x="24" y="72" width="36" height="6" fill="#60a5fa" transform="skewY(20)"/>
    <rect x="18" y="84" width="48" height="6" fill="#60a5fa" transform="skewY(20)"/>
    <rect x="30" y="96" width="24" height="6" fill="#60a5fa" transform="skewY(20)"/>
  </g>
  
  <!-- Main "RD" Monogram -->
  <g transform="translate(48, 36)">
    <!-- Letter "R" - Bold and stylized -->
    <g fill="#1e40af" transform="skewX(-10)">
      <rect x="0" y="0" width="12" height="96"/>
      <rect x="0" y="0" width="36" height="12"/>
      <rect x="0" y="36" width="30" height="12"/>
      <rect x="24" y="0" width="12" height="48"/>
      <polygon points="18,48 42,72 30,84 6,60"/>
    </g>
    
    <!-- Letter "D" - Bold and stylized -->
    <g fill="#2563eb" transform="translate(48, 0) skewX(-10)">
      <rect x="0" y="0" width="12" height="96"/>
      <rect x="0" y="0" width="30" height="12"/>
      <rect x="0" y="84" width="30" height="12"/>
      <rect x="24" y="12" width="12" height="72" rx="6"/>
    </g>
  </g>
  
  <!-- Speed lines forward effect -->
  <g opacity="0.2">
    <rect x="132" y="72" width="48" height="6" fill="#60a5fa" transform="skewY(-20)"/>
    <rect x="126" y="84" width="60" height="6" fill="#60a5fa" transform="skewY(-20)"/>
    <rect x="138" y="96" width="36" height="6" fill="#60a5fa" transform="skewY(-20)"/>
  </g>
  
  <!-- Racing chevron accent -->
  <g fill="#2563eb" opacity="0.6">
    <polygon points="84,78 96,66 102,72 90,84"/>
    <polygon points="96,90 108,78 114,84 102,96"/>
  </g>
  
  <!-- Gradients and effects -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#eff6ff"/>
      <stop offset="50%" stop-color="#dbeafe"/>
      <stop offset="100%" stop-color="#bfdbfe"/>
    </linearGradient>
  </defs>
</svg>
