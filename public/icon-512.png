<svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
  <!-- Background with Royal Drive theme -->
  <rect width="512" height="512" rx="64" fill="url(#bgGradient)"/>
  
  <!-- Speed lines background effect -->
  <g opacity="0.3">
    <rect x="64" y="192" width="96" height="16" fill="#60a5fa" transform="skewY(20)"/>
    <rect x="48" y="224" width="128" height="16" fill="#60a5fa" transform="skewY(20)"/>
    <rect x="80" y="256" width="64" height="16" fill="#60a5fa" transform="skewY(20)"/>
  </g>
  
  <!-- Main "RD" Monogram -->
  <g transform="translate(128, 96)">
    <!-- Letter "R" - Bold and stylized -->
    <g fill="#1e40af" transform="skewX(-10)">
      <rect x="0" y="0" width="32" height="256"/>
      <rect x="0" y="0" width="96" height="32"/>
      <rect x="0" y="96" width="80" height="32"/>
      <rect x="64" y="0" width="32" height="128"/>
      <polygon points="48,128 112,192 80,224 16,160"/>
    </g>
    
    <!-- Letter "D" - Bold and stylized -->
    <g fill="#2563eb" transform="translate(128, 0) skewX(-10)">
      <rect x="0" y="0" width="32" height="256"/>
      <rect x="0" y="0" width="80" height="32"/>
      <rect x="0" y="224" width="80" height="32"/>
      <rect x="64" y="32" width="32" height="192" rx="16"/>
    </g>
  </g>
  
  <!-- Speed lines forward effect -->
  <g opacity="0.2">
    <rect x="352" y="192" width="128" height="16" fill="#60a5fa" transform="skewY(-20)"/>
    <rect x="336" y="224" width="160" height="16" fill="#60a5fa" transform="skewY(-20)"/>
    <rect x="368" y="256" width="96" height="16" fill="#60a5fa" transform="skewY(-20)"/>
  </g>
  
  <!-- Racing chevron accent -->
  <g fill="#2563eb" opacity="0.6">
    <polygon points="224,208 256,176 272,192 240,224"/>
    <polygon points="256,240 288,208 304,224 272,256"/>
  </g>
  
  <!-- Gradients and effects -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#eff6ff"/>
      <stop offset="50%" stop-color="#dbeafe"/>
      <stop offset="100%" stop-color="#bfdbfe"/>
    </linearGradient>
  </defs>
</svg>
